        #offcanvasScrolling.offcanvas.offcanvas-start(data-bs-scroll='true' data-bs-backdrop='false' tabindex='-1' aria-labelledby='offcanvasScrollingLabel')
          .offcanvas-header
            h5#offcanvasScrollingLabel.offcanvas-title Offcanvas with body scrolling
            button.btn-close(type='button' data-bs-dismiss='offcanvas' aria-label='Close')
          .offcanvas-body
