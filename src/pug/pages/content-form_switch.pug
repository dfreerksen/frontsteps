extends ../layouts/2col.pug

block append config
  - var pageTitle = "Form Switch";

block content
  div.card
    div.card-body
      h3 #{pageTitle}
      p Extension to Bootstrap <code>.form-switch</code>

      h4 Small
      p Use <code>.form-switch-sm</code>. Same as <code>.form-switch</code> with modifications for alignment.

      .bd-example
        .form-check.form-switch.form-switch-sm
          input#switchCheckSmDefault.form-check-input(type='checkbox', role='switch')
          label.form-check-label(for='switchCheckSmDefault') Default small switch checkbox input
        .form-check.form-switch.form-switch-sm
          input#switchCheckSmChecked.form-check-input(type='checkbox', role='switch', checked='')
          label.form-check-label(for='switchCheckSmChecked') Checked small switch checkbox input
        .form-check.form-switch.form-switch-sm
          input#switchCheckSmDisabled.form-check-input(type='checkbox', role='switch', disabled='')
          label.form-check-label(for='switchCheckSmDisabled') Disabled small switch checkbox input
        .form-check.form-switch.form-switch-sm
          input#switchCheckSmCheckedDisabled.form-check-input(type='checkbox', role='switch', checked='', disabled='')
          label.form-check-label(for='switchCheckSmCheckedDisabled') Disabled small checked switch checkbox input

      pre
        code.language-html
          | &lt;div class="form-check form-switch form-switch-sm"&gt;
          |   &lt;input class="form-check-input" id="switchCheckSmDefault" type="checkbox" role="switch"&gt;
          |   &lt;label class="form-check-label" for="switchCheckSmDefault"&gt;Default small switch checkbox input&lt;/label&gt;
          | &lt;/div&gt;
          | &lt;div class="form-check form-switch form-switch-sm"&gt;
          |   &lt;input class="form-check-input" id="switchCheckSmChecked" type="checkbox" role="switch" checked=""&gt;
          |   &lt;label class="form-check-label" for="switchCheckSmChecked"&gt;Checked small switch checkbox input&lt;/label&gt;
          | &lt;/div&gt;
          | &lt;div class="form-check form-switch form-switch-sm"&gt;
          |   &lt;input class="form-check-input" id="switchCheckSmDisabled" type="checkbox" role="switch" disabled=""&gt;
          |   &lt;label class="form-check-label" for="switchCheckSmDisabled"&gt;Disabled small switch checkbox input&lt;/label&gt;
          | &lt;/div&gt;
